{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "extends": ["config:best-practices", "group:allNonMajor"],
  "commitBodyTable": true,
  "packageRules": [
    {
      "description": "Automerge digest updates directly to main without opening a PR",
      "matchUpdateTypes": ["digest"],
      "automerge": true,
      "automergeType": "branch"
    }
  ],
  "customManagers": [
    {
      "description": "Update github-releases in yml/lua files using '# renovate: datasource=github-releases depName=X' or '-- renovate: datasource=github-releases depName=X'",
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "managerFilePatterns": ["**/*.yml", "**/*.lua"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=github-releases\\s+depName=(?<depName>\\S+)\\s*[\\r\\n]+[^:]+:\\s*(?<currentValue>\\S+)",
        "-- renovate: datasource=github-releases depName=(?<depName>[^\\s]+)[\\s\\S]*?version\\s*=\\s*\"?(?<currentValue>[^\",]+)\"?"
      ]
    },
    {
      "description": "Track git-refs on main branch in yml/lua files using '# renovate: datasource=git-refs packageName=X' or '-- renovate: datasource=git-refs packageName=X'",
      "customType": "regex",
      "datasourceTemplate": "git-refs",
      "currentValueTemplate": "main",
      "managerFilePatterns": ["**/*.yml", "**/*.lua"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=git-refs\\s+packageName=(?<packageName>\\S+)\\s*[\\r\\n]+[^:]+:\\s*(?<currentDigest>\\S+)",
        "-- renovate: datasource=git-refs packageName=(?<packageName>[^\\s]+)\\s*?commit = \"?(?<currentDigest>[^\",]+)\"?"
      ]
    },
    {
      "description": "Track git-refs on master branch in yml/lua files using '# renovate: datasource=git-refs-master packageName=X' or '-- renovate: datasource=git-refs-master packageName=X'",
      "customType": "regex",
      "datasourceTemplate": "git-refs",
      "currentValueTemplate": "master",
      "managerFilePatterns": ["**/*.yml", "**/*.lua"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=git-refs-master\\s+packageName=(?<packageName>\\S+)\\s*[\\r\\n]+[^:]+:\\s*(?<currentDigest>\\S+)",
        "-- renovate: datasource=git-refs-master packageName=(?<packageName>[^\\s]+)\\s*?commit = \"?(?<currentDigest>[^\",]+)\"?"
      ]
    }
  ]
}
